<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:background="#DCDCDC"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    
    


<ScrollView
    android:layout_width="match_parent"
    android:layout_marginTop="60dp"
    android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


<RelativeLayout
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">



    <TextView
        android:layout_width="50dp"
        android:text="Edit"
        android:gravity="center"
        android:id="@+id/edit_name"
        android:textColor="@android:color/black"
        android:layout_alignParentRight="true"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="Santosh Kumar"
            android:textSize="15dp"
            android:id="@+id/name"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:text="+098798897987"
            android:textSize="12sp"
            android:id="@+id/phone"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" />


    </LinearLayout>
</RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="#DCDCDC"
        android:layout_height="0.5dp"/>



 <RelativeLayout
     android:layout_width="match_parent"
     android:background="@android:color/white"
     android:layout_height="wrap_content">


     <ImageView
         android:layout_width="50dp"
         android:layout_alignParentRight="true"
         android:src="@drawable/right_arrow"
         android:layout_marginTop="5dp"
         android:padding="17dp"
         android:tint="@android:color/black"
         android:layout_height="50dp" />
     <LinearLayout
         android:layout_width="match_parent"
         android:orientation="vertical"
         android:id="@+id/legal"
         android:padding="10dp"
         android:layout_height="wrap_content">

         <TextView
             android:layout_width="match_parent"
             android:text="About us"
             android:textSize="15dp"
             android:fontFamily="sans-serif-thin"
             android:textColor="@android:color/black"
             android:textStyle="bold"
             android:layout_height="wrap_content" />

         <TextView
             android:layout_width="match_parent"
             android:text="Privacy Policy"
             android:textSize="12sp"
             android:layout_marginTop="5dp"
             android:textColor="@android:color/black"
             android:layout_height="wrap_content" />


     </LinearLayout>
 </RelativeLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

<TextView
    android:layout_width="match_parent"
    android:text="My Orders"
    android:textSize="15dp"
    android:paddingTop="10dp"
    android:textStyle="bold"
    android:fontFamily="sans-serif-light"
    android:layout_marginLeft="10dp"
    android:textColor="@android:color/black"
    android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/right_arrow"
            android:layout_marginTop="5dp"
            android:padding="17dp"
            android:tint="@android:color/black"
            android:layout_height="50dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/tracking"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Food Orders"
                android:textSize="15dp"
                android:fontFamily="sans-serif-thin"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="Past orders, Tracking"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="#DCDCDC"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/right_arrow"
            android:layout_marginTop="5dp"
            android:padding="17dp"
            android:tint="@android:color/black"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/tiffin"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="My Tiffin"
                android:textSize="14dp"
                android:fontFamily="sans-serif-thin"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="Current Tiffins"
                android:textSize="12sp"
                android:id="@+id/my_tiffin"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </RelativeLayout>




</LinearLayout>



  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_marginTop="10dp"
      android:background="@android:color/white"
      android:layout_height="wrap_content">

      <TextView
          android:layout_width="50dp"
          android:text="Edit"
          android:gravity="center"
          android:id="@+id/edit_address"
          android:textColor="@android:color/black"
          android:layout_alignParentRight="true"
          android:layout_height="50dp" />

      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:padding="10dp"
          android:layout_height="wrap_content">

          <TextView
              android:layout_width="match_parent"
              android:text="Address"
              android:textSize="15dp"
              android:fontFamily="sans-serif-light"
              android:textColor="@android:color/black"
              android:textStyle="bold"
              android:layout_height="wrap_content" />

          <TextView
              android:layout_width="match_parent"
              android:text="Chattarpur New delhis"
              android:textSize="12sp"
              android:id="@+id/address"
              android:layout_marginTop="5dp"
              android:textColor="@android:color/black"
              android:layout_height="wrap_content" />


      </LinearLayout>
  </RelativeLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:background="@android:color/white"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="50dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/phone_call"
        android:tint="@android:color/black"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:id="@+id/call"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="Help"
            android:textSize="15dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:text="For Order cancel or any query call us"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>



    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Logout"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/logout"
        android:textSize="14sp"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:fontFamily="sans-serif-thin"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:background="@drawable/logout_button"
        android:layout_marginTop="20dp"/>


</LinearLayout>

</ScrollView>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_alignParentTop="true"
    android:background="@android:color/white"
    android:layout_height="60dp">

    <ImageView
        android:layout_width="50dp"
        android:src="@drawable/left_arrow"
        android:id="@+id/back"
        android:tint="@android:color/black"
        android:padding="13dp"
        android:layout_height="match_parent" />


    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="Welcome Santosh"
        android:textSize="16sp"
        android:id="@+id/welcome"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_height="match_parent" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#DCDCDC"/>
</RelativeLayout>



</RelativeLayout>