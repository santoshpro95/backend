<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


<ScrollView
    android:layout_width="match_parent"
    android:layout_marginTop="60dp"
    android:layout_marginBottom="65dp"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <!--First-->
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="70dp"
        android:id="@+id/image"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
      android:background="@drawable/no_image"
        android:layout_height="70dp" />


    <LinearLayout
        android:layout_width="130dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="Subway"
            android:textSize="13sp"
            android:id="@+id/food_name"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:text="Puri+ sab dfg xdf dfh df hdfh  "
            android:textSize="12sp"
            android:id="@+id/items"
            android:gravity="center_vertical"
            android:textColor="@color/light_grey"
            android:layout_height="wrap_content" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/colorborder"
        android:layout_height="30dp">

        <Button
            android:layout_width="match_parent"
            android:text="-"
            android:id="@+id/dec"
            android:textSize="21sp"
            android:layout_weight="1.2"
            android:textColor="@color/colorPrimaryDark"
            android:background="@android:color/transparent"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="match_parent"
            android:text="2"
            android:gravity="center"
            android:layout_weight="1.2"
            android:id="@+id/no_meals"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="match_parent"
            android:text="+"
            android:textSize="18sp"
            android:layout_weight="1.2"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/inc"
            android:background="@android:color/transparent"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>
        <!--First tab complete-->


<!--Finish 2nd tab-->



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/light_grey"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">



            <ImageView
                android:layout_width="50dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/phone_call"
                android:tint="@android:color/black"
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:visibility="gone"
                android:id="@+id/call"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="60dp">


                <ImageView
                    android:layout_width="70dp"
                    android:background="@drawable/no_image"
                    android:id="@+id/c_image"
                    android:scaleType="centerCrop"
                    android:layout_height="70dp" />

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">


                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_marginLeft="10dp"
                      android:gravity="center_vertical"
                      android:orientation="vertical"
                      android:layout_height="match_parent">

                      <TextView
                          android:layout_width="match_parent"
                          android:text="Santosh Kumar"
                          android:textSize="12sp"
                          android:id="@+id/c_name"
                          android:textColor="@android:color/black"
                          android:layout_height="wrap_content" />
                      <TextView
                          android:layout_width="match_parent"
                          android:text="2 kms away"
                          android:textSize="12sp"
                          android:id="@+id/c_distance"
                          android:textColor="@color/light_grey"
                          android:layout_height="wrap_content" />


                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="left"
                          android:layout_marginRight="10dp"
                          android:layout_height="20dp">

                          <ImageView
                              android:layout_width="13dp"
                              android:src="@drawable/star"
                              android:layout_gravity="center"
                              android:layout_marginRight="2dp"
                              android:layout_height="match_parent" />


                          <TextView
                              android:layout_width="wrap_content"
                              android:text="3.4"
                              android:textSize="13sp"
                              android:layout_marginTop="0.5dp"
                              android:id="@+id/rating"
                              android:textColor="@color/light_grey"
                              android:layout_height="match_parent" />


                      </LinearLayout>



                  </LinearLayout>





              </RelativeLayout>



            </LinearLayout>



        </RelativeLayout>




        <!--3rd Tab-->



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/light_grey"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:text="Kitchen Bill"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="wrap_content"
                    android:text="Food Price"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="13dp"
                        android:src="@drawable/rupee"
                        android:layout_gravity="center"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="240"
                        android:gravity="center"
                        android:id="@+id/food_price"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="wrap_content"
                    android:text="Delivery Price"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="13dp"
                        android:src="@drawable/rupee"
                        android:layout_gravity="center"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="240"
                        android:gravity="center"
                        android:id="@+id/delivery"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>






            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/light_grey"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="wrap_content"
                    android:text="Total Price"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="13dp"
                        android:src="@drawable/rupee"
                        android:layout_gravity="center"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="240"
                        android:gravity="center"
                        android:id="@+id/total"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>




        </LinearLayout>

<!--Finished 3rd tab-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Payment Mode"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Cash on Delivery"
                android:gravity="right"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_height="match_parent" />


        </LinearLayout>

        <!--4th tab-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="50dp"
                android:textAllCaps="false"
                android:text="Edit"
                android:layout_alignParentRight="true"
                android:id="@+id/edit_address"
                android:gravity="center_vertical|right"
                android:textColor="@color/colorPrimaryDark"
                android:background="@android:color/transparent"
                android:layout_height="50dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Delivery Address"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:text="sdkfjhkdjhdkjghjdhgj,dhgjdfhgj,dfhgj,dfg"
                    android:gravity="center"
                    android:id="@+id/address"
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    android:layout_height="match_parent" />




            </LinearLayout>


        </RelativeLayout>




    </LinearLayout>

</ScrollView>



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@android:color/white"
    android:layout_alignParentBottom="true"
    android:padding="10dp">


    <Button
        android:layout_width="match_parent"
        android:id="@+id/order_placed"
        android:text="Place Order"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent" />


</RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="50dp"
            android:src="@drawable/left_arrow"
            android:id="@+id/back"
            android:tint="@android:color/black"
            android:padding="13dp"
            android:layout_height="match_parent" />


        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="Checkout"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_height="match_parent" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#DCDCDC"/>
    </RelativeLayout>






</RelativeLayout>