<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="goodchef.com.chef_hire.user.ForgotPassword">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/top"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="50dp"
            android:src="@drawable/back"
            android:padding="13dp"
            android:tint="@android:color/black"
            android:id="@+id/close"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="match_parent"
            android:text="User Forget Password"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/black"
            android:layout_height="match_parent"

            />
    </RelativeLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/top"
    android:visibility="gone"
    android:id="@+id/first"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:hint="Phone"
        android:inputType="number"
        android:textSize="14sp"
        android:padding="5dp"
        android:background="@drawable/edittext_border"
        android:textColor="@android:color/black"
        android:textColorHint="@color/light_grey"
        android:id="@+id/phone"
        android:layout_marginRight="20dp"
        android:layout_height="45dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="80dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_marginRight="80dp"
        android:id="@+id/req_otp"
        android:textSize="14sp"
        android:gravity="center"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-thin"
        android:textStyle="bold"
        android:text="Next"
        android:textAllCaps="false"
        android:background="@drawable/button_round_login"/>



</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/top"
        android:orientation="vertical"
        android:id="@+id/second"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text=""
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:id="@+id/msg"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:hint="OTP"
            android:inputType="number"
            android:textSize="14sp"
            android:padding="5dp"
            android:background="@drawable/edittext_border"
            android:textColor="@android:color/black"
            android:textColorHint="@color/light_grey"
            android:id="@+id/otp"
            android:layout_marginRight="20dp"
            android:layout_height="45dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="80dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_marginRight="80dp"
            android:id="@+id/check_otp"
            android:textSize="14sp"
            android:gravity="center"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-thin"
            android:textStyle="bold"
            android:text="Submit"
            android:textAllCaps="false"
            android:background="@drawable/button_round_login"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/top"
        android:id="@+id/third"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:hint="New Password"
            android:inputType="number"
            android:textSize="14sp"
            android:padding="5dp"
            android:background="@drawable/edittext_border"
            android:textColor="@android:color/black"
            android:textColorHint="@color/light_grey"
            android:id="@+id/new_password1"
            android:layout_marginRight="20dp"
            android:layout_height="45dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:hint="New Password"
            android:inputType="number"
            android:textSize="14sp"
            android:padding="5dp"
            android:background="@drawable/edittext_border"
            android:textColor="@android:color/black"
            android:textColorHint="@color/light_grey"
            android:id="@+id/new_password2"
            android:layout_marginRight="20dp"
            android:layout_height="45dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="80dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_marginRight="80dp"
            android:id="@+id/submit"
            android:textSize="14sp"
            android:gravity="center"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-thin"
            android:textStyle="bold"
            android:text="Submit"
            android:textAllCaps="false"
            android:background="@drawable/button_round_login"/>



    </LinearLayout>

</RelativeLayout>
